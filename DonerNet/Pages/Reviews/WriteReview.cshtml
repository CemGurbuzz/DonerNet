@page
@model DonerNet.Pages.Reviews.WriteReviewModel
@{
}

<h1>Leave a Review</h1>

<form method="post">

    <div class="form-group">
        <label for="name">Your Name:</label>
        <input type="text" class="form-control" id="name" name="Review.Name" required>
    </div>

    <div class="form-group">
        <label for="message">Your Review:</label>
        <textarea class="form-control" id="message" name="Review.Message" rows="5" required></textarea>
    </div>

    <div class="form-group">
        <label for="rate">Rate:</label>
        <select class="form-control" id="rate" name="Review.Rate" required>
            <option value="5">5</option>
            <option value="4">4</option>
            <option value="3">3</option>
            <option value="2">2</option>
            <option value="1">1</option>
        </select>
    </div>
    <br />

    <button type="submit" class="btn btnDoner">Submit Review</button>
</form>
